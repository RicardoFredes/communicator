{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    /* Emit */
    "outDir": "dist",
    "declaration": true,
    "removeComments": true
  },
  "include": ["src/", "index.ts"],
  "exclude": ["node_modules/"]
}
