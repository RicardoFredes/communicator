{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    /* Emit */
    "outDir": "dist",
    "declaration": true,
    "removeComments": true
  },
  "include": ["index.ts", "src/"],
  "exclude": ["node_modules/", "src/**/*.spec.ts"]
}
